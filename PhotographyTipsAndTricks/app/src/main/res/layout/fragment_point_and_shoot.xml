<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.ibrahim.photographytips.PointAndShoot">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/t1"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:text="A point-and-shoot camera, also called a compact camera,is a still camera designed primarily for simple operation. Most autofocus for focusing, automatic systems for setting the exposure options, and have flash units built in."

                />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:id="@+id/point_and_shoot_imageView1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/t2"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:text="Figure:Regular Point and Shoot Camera"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:id="@+id/t3"
                android:textColor="@color/textColor"
                android:text="The main advantage of a point and shoot camera is that it is compact and very easy to carry anywhere. On the other hand, the limited functionality sometimes hampers proper photographic experience."/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:id="@+id/point_and_shoot_imageView2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/t4"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"
                android:textColor="@color/textColor"
                android:textAlignment="center"
                android:text="Figure:Difference between Point and Shoot and Mirrorless camera"/>

        </LinearLayout>


        </ScrollView>


</FrameLayout>
